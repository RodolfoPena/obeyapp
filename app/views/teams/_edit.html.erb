<%= form_with model: team, class: "modal fade", id: "team-edit-modal-#{team.id}", tabindex: "-1", role: "dialog", 'aria-labelledby': "team-edit-modal", 'aria-hidden': "true" do |f| %>
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">Edit Team</h5>
      <button type="button" class="close btn btn-round" data-dismiss="modal" aria-label="Close">
        <i class="material-icons">close</i>
      </button>
    </div>
    <ul class="nav nav-tabs nav-fill">
      <li class="nav-item">
        <a class="nav-link active" id="team-target-edit-details-tab-<%= team.id %>" data-toggle="tab" href="#team-target-edit-details-<%= team.id %>" role="tab" aria-controls="team-target-edit-details-<%= team.id %>" aria-selected="true">Details</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="team-target-edit-members-tab-<%= team.id %>" data-toggle="tab" href="#team-target-edit-members-<%= team.id %>" role="tab" aria-controls="team-target-edit-members-<%= team.id %>" aria-selected="false">Members</a>
      </li>
    </ul>
    <div class="modal-body">
      <div class="tab-content">
        <div class="tab-pane fade show active" id="team-target-edit-details-<%= team.id %>" role="tabpanel" aria-labelledby="team-target-edit-details-tab-<%= team.id %>">
          <h6>Team details</h6>
          <div class="form-group row align-items-center">
            <label class="col-3">Name</label>
            <%= f.text_field :name, class: "form-control col", placeholder:"Obeya name", id: "team_name_edit"%>
          </div>
          <div class="form-group row">
            <label class="col-3">Description</label>
            <%= f.text_area :description, class: "form-control col", placeholder:"Description", rows:'3', id:"team_description_edit"%>
          </div>
        </div>
        <div class="tab-pane fade" id="team-target-edit-members-<%= team.id %>" role="tabpanel" aria-labelledby="team-target-edit-members-tab-<%= team.id %>">
          <div class="users-manage" data-filter-list="form-group-users">
            <div class="mb-3">
              <ul class="avatars text-center">
                <% team.user_members.each do |member| %>
                <li>
                  <%= image_tag user_avatar(member.id), class:'avatar', title: member.first_name %>
                </li>
                <% end %>
              </ul>
            </div>
            <div class="input-group input-group-round">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="material-icons">filter_list</i>
                </span>
              </div>
              <input type="search" class="form-control filter-list-input" placeholder="Filter members" aria-label="Filter Members" aria-describedby="filter-members">
            </div>
            <div class="form-group-users">
              <% @users.each do |user| %>
              <div class="custom-control custom-checkbox">
                <%= f.check_box :member_ids, {multiple: true, checked: (team.user_members.include?(user) ? 'checked' : ''), class:'custom-control-input', id:"team-edit-manage-#{user.id}"}, user.id, nil %>
                <label class="custom-control-label" for="team-edit-manage-<%= user.id %>">
                  <div class="d-flex align-items-center">
                    <%= image_tag user_avatar(user.id), class:'avatar mr-2' %>
                    <span class="h6 mb-0" data-filter-by="text"><%= user.first_name %> <%= user.last_name %></span>
                  </div>
                </label>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <%= f.submit "Create", class:'btn btn-primary' %>
    </div>
  </div>
</div>
<% end %>
