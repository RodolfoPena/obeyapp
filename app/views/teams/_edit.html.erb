<%= form_with model: team, class: "modal fade", id: "team-edit-modal-#{team.id}", tabindex: "-1", role: "dialog", 'aria-labelledby': "team-edit-modal", 'aria-hidden': "true" do |f| %>
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">Edit Obeya</h5>
      <button type="button" class="close btn btn-round" data-dismiss="modal" aria-label="Close">
        <i class="material-icons">close</i>
      </button>
    </div>
    <!--end of modal head-->
    <ul class="nav nav-tabs nav-fill">
      <li class="nav-item">
        <a class="nav-link active" id="team-edit-details-tab-<%= team.id %>" data-toggle="tab" href="#team-edit-details-<%= team.id %>" role="tab" aria-controls="team-edit-details" aria-selected="true">Details</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="team-edit-members-tab" data-toggle="tab" href="#team-edit-members-<%= team.id %>" role="tab" aria-controls="team-edit-members" aria-selected="false">Members</a>
      </li>
    </ul>
    <div class="modal-body">
      <div class="tab-content">
        <div class="tab-pane fade show active" id="team-edit-details-<%= team.id %>" role="tabpanel" aria-labelledby="team-edit-details-tab-<%= team.id %>">
          <h6>Obeya details</h6>
          <div class="form-group row align-items-center">
            <label class="col-3">Name</label>
            <%= f.text_field :name, class: "form-control col", placeholder:"Obeya name", id: "team_name_edit"%>
          </div>
          <div class="form-group row">
            <label class="col-3">Description</label>
            <%= f.text_area :description, class: "form-control col", placeholder:"Description", rows:'3', id:"team_description_edit"%>
          </div>
        </div>
        <div class="tab-pane fade" id="team-edit-members-<%= team.id %>" role="tabpanel" aria-labelledby="team-edit-members-tab-<%= team.id %>">
          <div class="users-manage" data-filter-list="form-group-users">
            <div class="mb-3">
              <ul class="avatars text-center">

                <li>
                  <%= image_tag user_avatar(current_user.id), class:'avatar', title: current_user.first_name %>
                </li>
              </ul>
            </div>
            <div class="input-group input-group-round">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="material-icons">filter_list</i>
                </span>
              </div>
              <input type="search" class="form-control filter-list-input" placeholder="Filter members" aria-label="Filter Members" aria-describedby="filter-members">
            </div>
            <div class="form-group-users">
              <% @users.each do |user|  %>
              <div class="custom-checkbox">
                  <div class="d-flex align-items-center">
                    <%= image_tag user_avatar(user.id), class:'avatar mr-2' %>
                    <%= user.first_name %> <%= user.last_name %>
                    <span class="h6 mb-0" data-filter-by="text"></span>
                    <div class="custom-control">
                    <%= f.check_box :member_ids, {multiple: true, checked: (team.user_members.include?(user) ? 'checked' : '')}, user.id, nil %>
                    </div>
                  </div>
              </div>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    </div>
    <!--end of modal body-->
    <div class="modal-footer">
    <%= f.submit "Create", class:'btn btn-primary' %>
    </div>
  </div>
</div>
<% end %>
