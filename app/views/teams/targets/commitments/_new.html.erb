<%= form_with model: [target.team, target, Commitment.new],  remote:true, class: "modal fade", id: "team-target-commitment-add-modal", tabindex: "-1", role: "dialog", 'aria-labelledby': "team-targe-commitment-add-modal", 'aria-hidden': "true" do |f| %>
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">New commitment</h5>
      <button type="button" class="close btn btn-round" data-dismiss="modal" aria-label="Close">
        <i class="material-icons">close</i>
      </button>
    </div>
    <!--end of modal head-->
    <ul class="nav nav-tabs nav-fill">
      <li class="nav-item">
        <a class="nav-link active" id="team-target-commitment-add-details-tab" data-toggle="tab" href="#team-target-commitment-add-details" role="tab" aria-controls="target-commitment-add-details" aria-selected="true">Details</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="team-target-commitment-add-responsable-tab" data-toggle="tab" href="#team-target-commitment-add-responsable" role="tab" aria-controls="target-commitment-add-responsable" aria-selected="false">Responsable</a>
      </li>
    </ul>
    <div class="modal-body">
      <div class="tab-content">
        <div class="tab-pane fade show active" id="team-target-commitment-add-details" role="tabpanel" aria-labelledby="team-target-commitment-add-details-tab">
          <h6>General Details</h6>
          <div class="form-group row align-items-center">
            <label class="col-3">Action</label>
            <%= f.text_field :action, class: "form-control col", placeholder:"Action to do"%>
          </div>
          <div class="form-group row">
            <label class="col-3">Conditions of satisfaction</label>
            <%= f.text_area :conditions_of_satisfaction, class: "form-control col", placeholder:"Set conditions of satisfaction", rows:'3'%>
          </div>
          <hr>
          <h6>Timeline</h6>
          <div class="form-group row align-items-center">
            <label class="col-3">Due Date</label>
            <%= f.date_field :due_date, class: "form-control col", placeholder:"commitment due"%>
          </div>
          <div class="alert alert-warning text-small" role="alert">
            <span>You can change due dates at any time.</span>
          </div>
          <hr>
          <h6>Options</h6>
          <div class="row">
            <div class="col">
              <div class="custom-control custom-radio">
                <%= f.check_box :deliverable, {checked:false, class:'custom-control-input', id:"team-target-deliverable-option"}, nil %>
                <label class="custom-control-label" for="team-target-deliverable-option">Deliverable</label>
              </div>
            </div>
            <div class="col">
              <div class="custom-control custom-radio">
                <%= f.check_box :critical, {checked:false, class:'custom-control-input', id:"critical-option"}, nil %>
                <label class="custom-control-label" for="critical-option">Critical</label>
              </div>
            </div>
          </div>
        </div>
        <!-- start of tabpane responsable -->
        <div class="tab-pane fade" id="team-target-commitment-add-responsable" role="tabpanel" aria-labelledby="team-target-commitment-add-responsable-tab">
          <div class="users-manage" data-filter-list="form-group-users">
            <div class="input-group input-group-round">
              <div class="input-group-prepend">
                <span class="input-group-text">
                  <i class="material-icons">filter_list</i>
                </span>
              </div>
              <input type="search" class="form-control filter-list-input" placeholder="Filter members" aria-label="Filter Members" aria-describedby="filter-members">
            </div>
            <div class="form-group-users">
              <% target.team.user_members.each do |user| %>
              <div class="custom-control custom-radio">
                <%= f.radio_button :responsible_id , user.id, id:"team-target-responsible-commitment-#{user.id}", class:'custom-control-input' %>
                <label class="custom-control-label" for="team-target-responsible-commitment-<%= user.id %>">
                  <div class="d-flex align-items-center">
                    <%= image_tag user_avatar(user.id), class:'avatar mr-2', 'data-title' => user.first_name , 'data-toggle':'tooltip' %>
                    <span class="h6 mb-0" data-filter-by="text"><%= user.first_name %> <%= user.last_name %></span>
                  </div>
                </label>
              </div>
              <% end %>
            </div>
          </div>
        </div>
        <!-- end of tabpane responsable -->
      </div>
    </div>
    <!--end of modal body-->
    <div class="modal-footer">
      <%= f.submit "Create", class:'btn btn-primary' %>
    </div>
  </div>
</div>
<% end %>
