<div class="layout layout-nav-side">
  <%= render 'shared/navside' %>
  <div class="main-container">

    <div class="navbar bg-white breadcrumb-bar">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="index.html">Overview</a>
          </li>
          <li class="breadcrumb-item">
            <a href="pages-app.html">App Pages</a>
          </li>
          <li class="breadcrumb-item active" aria-current="page">User</li>
        </ol>
      </nav>

      <div class="dropdown">
        <button class="btn btn-round" role="button" data-toggle="dropdown" aria-expanded="false">
          <i class="material-icons">settings</i>
        </button>
        <div class="dropdown-menu dropdown-menu-right">

          <a class="dropdown-item" href="#">Account Settings</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item text-danger" href="#">Log out</a>

        </div>
      </div>

    </div>
    <%= render 'shared/notices'%>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-11 col-xl-10">
          <div class="page-header mb-4">
            <div class="media">
              <%= image_tag user_avatar(current_user.id), class:'avatar avatar-lg mt-1'%>

              <div class="media-body ml-3">
                <h1 class="mb-0"><%= current_user.first_name%></h1>
                <p class="lead"><%= current_user.bio %></p>
              </div>
            </div>
          </div>
          <ul class="nav nav-tabs nav-fill">
            <li class="nav-item">
              <a class="nav-link active" data-toggle="tab" href="#teams" role="tab" aria-controls="teams" aria-selected="true">Obeyas</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#projects" role="tab" aria-controls="projects" aria-selected="false">Targets</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#tasks" role="tab" aria-controls="tasks" aria-selected="false">Commitments</a>
            </li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane fade show active" id="teams" role="tabpanel" aria-labelledby="teams-tab" data-filter-list="content-list-body">
              <div class="row content-list-head">
                <div class="col-auto">
                  <h3>Obeyas</h3>
                  <%= link_to '+', new_team_path, remote: true, class:'btn btn-round', data: {toggle:'modal', target:'#team-add-modal'} %>
                </div>
                <form class="col-md-auto">
                  <div class="input-group input-group-round">
                    <div class="input-group-prepend">
                      <span class="input-group-text">
                        <i class="material-icons">filter_list</i>
                      </span>
                    </div>
                    <input type="search" class="form-control filter-list-input" placeholder="Filter teams" aria-label="Filter teams" aria-describedby="filter-teams">
                  </div>
                </form>
              </div>
              <!--end of content list head-->
              <div class="content-list-body row">
              <% current_user.teams.each do |team| %>
                <div class="col-md-6">
                  <div class="card card-team">
                    <div class="card-body">
                      <div class="dropdown card-options">
                        <button class="btn-options" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <i class="material-icons">more_vert</i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right">
                          <%= link_to 'Show', team_path(team), class:'dropdown-item'%>
                          <%= link_to 'Edit', edit_team_path(team), class:'dropdown-item', data: {toggle:'modal', target:"#team-edit-modal-#{team.id}"} %>
                          <div class="dropdown-divider"></div>
                          <%= link_to 'Delete', team_path(team.id), class:'dropdown-item text-danger', method: :delete%>
                          <a class="dropdown-item text-danger" href="#">Leave Team</a>
                        </div>
                      </div>
                      <div class="card-title">
                        <a href="#">
                          <h5 data-filter-by="text"><%= team.name %></h5>
                        </a>
                        <% if (team.members.count) == 1 %>
                        <span> 1 Member</span>
                        <% else %>
                        <span><%= team.members.count %> Members</span>
                        <% end %>
                      </div>

                      <ul class="avatars">
                        <% team.members.each do |member|%>
                        <li>
                          <a href="#" data-toggle="tooltip" title="<%= user_name(member.user_id) %>">
                            <%= image_tag user_avatar(member.user_id), class:'avatar' %>
                          </a>
                        </li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                  <%= render partial: 'edit', locals: { team: team } %>
                </div>
                <% end %>
              <%= render 'new' %>
              </div>

              <!--end of content-list-body-->
            </div>
            <!--end of tab-->
          </div>

        </div>
      </div>
    </div>

    <button class="btn btn-primary btn-round btn-floating btn-lg" type="button" data-toggle="collapse" data-target="#floating-chat" aria-expanded="false" aria-controls="sidebar-floating-chat">
      <i class="material-icons">chat_bubble</i>
      <i class="material-icons">close</i>
    </button>


  </div>
</div>
