<%= form_with model: target, class: "modal fade", id: "target-edit-modal-#{target.id}", tabindex: "-1", role: "dialog", 'aria-labelledby': "target-edit-modal", 'aria-hidden': "true" do |f| %>
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">New Target</h5>
            <button type="button" class="close btn btn-round" data-dismiss="modal" aria-label="Close">
                <i class="material-icons">close</i>
            </button>
        </div>
        <!--end of modal head-->
        <ul class="nav nav-tabs nav-fill">
            <li class="nav-item">
                <a class="nav-link active" id="target-add-details-tab-<%= target.id %>" data-toggle="tab" href="#target-add-details-<%= target.id %>" role="tab" aria-controls="target-add-details-<%= target.id %>" aria-selected="true">Details</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="target-add-responsable-tab-<%= target.id %>" data-toggle="tab" href="#target-add-responsable-<%= target.id %>" role="tab" aria-controls="target-add-responsable-<%= target.id %>" aria-selected="false">Responsable</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="target-add-team-tab-<%= target.id %>" data-toggle="tab" href="#target-add-team-<%= target.id %>" role="tab" aria-controls="target-add-team-<%= target.id %>" aria-selected="false">Team</a>
            </li>
        </ul>
        <div class="modal-body">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="target-add-details-<%= target.id %>" role="tabpanel" aria-labelledby="target-add-details-tab-<%= target.id %>">
                    <h6>General Details</h6>
                    <div class="form-group row align-items-center">
                        <label class="col-3">Name</label>
                        <%= f.text_field :title, class: "form-control col", placeholder:"Target title"%>
                    </div>
                    <div class="form-group row">
                        <label class="col-3">Description</label>
                        <%= f.text_area :description, class: "form-control col", placeholder:"Description", rows:'3'%>
                    </div>
                    <hr>
                    <h6>Timeline</h6>
                    <div class="form-group row align-items-center">
                        <label class="col-3">Start Date</label>
                        <%= f.date_field :start_date, class: "form-control col", placeholder:"Target start"%>
                    </div>
                    <div class="form-group row align-items-center">
                        <label class="col-3">Due Date</label>
                        <%= f.date_field :due_date, class: "form-control col", placeholder:"Target due"%>
                    </div>
                    <div class="alert alert-warning text-small" role="alert">
                        <span>You can change due dates at any time.</span>
                    </div>
                    <hr>
                    <h6>Visibility</h6>
                    <div class="row">
                        <div class="col">
                            <div class="custom-control custom-radio">
                                <input type="radio" id="visibility-everyone" name="visibility" class="custom-control-input" checked>
                                <label class="custom-control-label" for="visibility-everyone">Everyone</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="custom-control custom-radio">
                                <input type="radio" id="visibility-members" name="visibility" class="custom-control-input">
                                <label class="custom-control-label" for="visibility-members">Members</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="custom-control custom-radio">
                                <input type="radio" id="visibility-me" name="visibility" class="custom-control-input">
                                <label class="custom-control-label" for="visibility-me">Just me</label>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- start of tabpane responsable -->
                <div class="tab-pane fade" id="target-add-responsable-<%= target.id %>" role="tabpanel" aria-labelledby="target-add-responsable-tab-<%= target.id %>">
                    <div class="users-manage" data-filter-list="form-group-users">
                        <div class="mb-3">
                            <ul class="avatars text-center">
                                <li>
                                    <img alt="Claire Connors" src="assets/img/avatar-female-1.jpg" class="avatar" data-toggle="tooltip" data-title="Claire Connors" />
                                </li>
                            </ul>
                        </div>
                        <div class="input-group input-group-round">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="material-icons">filter_list</i>
                                </span>
                            </div>
                            <input type="search" class="form-control filter-list-input" placeholder="Filter members" aria-label="Filter Members" aria-describedby="filter-members">
                        </div>
                        <div class="form-group-users">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="project-user-1" checked>
                                <label class="custom-control-label" for="project-user-1">
                                    <div class="d-flex align-items-center">
                                        <img alt="Claire Connors" src="assets/img/avatar-female-1.jpg" class="avatar mr-2" />
                                        <span class="h6 mb-0" data-filter-by="text">Claire Connors</span>
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end of tabpane responsable -->
                <!-- start of tabpane team -->
                <div class="tab-pane fade" id="target-add-team-<%= target.id %>" role="tabpanel" aria-labelledby="target-add-team-tab-<%= target.id %>">
                    <div class="users-manage" data-filter-list="form-group-users">
                        <div class="mb-3">
                            <ul class="avatars text-center">
                              Team:
                                <li>

                                </li>
                            </ul>
                        </div>
                        <div class="input-group input-group-round">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="material-icons">filter_list</i>
                                </span>
                            </div>
                            <input type="search" class="form-control filter-list-input" placeholder="Filter members" aria-label="Filter Members" aria-describedby="filter-members">
                        </div>
                        <div class="form-group-users">
                        <% current_user.teams.each do |team| %>
                            <div class="custom-control custom-checkbox">
                              <%= f.check_box :team_id, {multiple: false, checked:false}, team.id, nil %>
                                <label class="custom-control-label" for="<%= team.id %>">
                                    <div class="d-flex align-items-center">
                                        <span class="h6 mb-0" data-filter-by="text"><%= team.name %></span>
                                    </div>
                                </label>
                            </div>
                        <% end %>
                        </div>
                    </div>
                </div>
                <!-- end of tabpane team -->
            </div>
        </div>
        <!--end of modal body-->
        <div class="modal-footer">
          <%= f.submit "Create", class:'btn btn-primary' %>
        </div>
    </div>
</div>
<% end %>
