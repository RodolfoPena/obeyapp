<%= form_with model: target,  remote:true, class: "modal fade", id: "add-target-responsible-#{target.id}", tabindex: "-1", role: "dialog", 'aria-labelledby': "add-target-responsible", 'aria-hidden': "true" do |f| %>
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add a Target Responsible </h5>
                <button type="button" class="close btn btn-round" data-dismiss="modal" aria-label="Close">
                    <i class="material-icons">close</i>
                </button>
            </div>
            <!--end of modal head-->
            <div class="modal-body">
                <div class="tab-content">
                    <!-- start of tabpane responsable -->

                        <div class="users-manage" data-filter-list="form-group-users">
                            <div class="mb-3">
                                <ul class="avatars text-center">
                                    <li>
                                        <!-- Actual <img alt="Claire Connors" src="assets/img/avatar-female-1.jpg" class="avatar" data-toggle="tooltip" data-title="Claire Connors" /> -->
                                    </li>
                                </ul>
                            </div>
                            <div class="input-group input-group-round">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="material-icons">filter_list</i>
                                    </span>
                                </div>
                                <input type="search" class="form-control filter-list-input" placeholder="Filter members" aria-label="Filter Members" aria-describedby="filter-members">
                            </div>
                            <div class="form-group-users">
                              <% User.all.each do |user| %>
                                  <div class="custom-control custom-checkbox">
                                    <%= f.check_box :responsible_id  , {multiple: false, checked:false}, user.id, nil %>
                                      <label class="custom-control-label" for="<%= user.id %>">
                                          <div class="d-flex align-items-center">
                                              <span class="h6 mb-0" data-filter-by="text"><%= user.first_name %></span>
                                          </div>
                                      </label>
                                  </div>
                              <% end %>
                            </div>
                        </div>

                    <!-- end of tabpane responsable -->
                </div>
            </div>
            <!--end of modal body-->
            <div class="modal-footer">
              <%= f.submit "Create", class:'btn btn-primary' %>
            </div>
        </div>
    </div>
<% end %>
